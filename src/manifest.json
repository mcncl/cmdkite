{
  "manifest_version": 3,
  "name": "Quick Launch Box",
  "version": "1.0",
  "description": "Launch a command box with CMD+K",
  "permissions": ["commands", "storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Toggle the command box"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://buildkite.com/docs/*",
        "*://buildkite.com/changelog/*",
        "*://buildkite.com/privacy*",
        "*://buildkite.com/terms*"
      ],
      "js": ["content.js"],
      "css": []
    }
  ]
}
